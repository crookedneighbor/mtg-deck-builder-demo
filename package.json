{
  "name": "deck-builder",
  "version": "0.1.0",
  "description": "A Magice the Gathering Deck builder.",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "prebuild:precommit": "npm run lint",
    "build:precommit": "echo 'Building js for production before committing...' | chalk yellow && echo 'The built file will be added to the commit automatically.' | chalk red bold && npm run build && git add dist",
    "prebuild": "node scripts/build-docs.js",
    "build:watch": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "dev": "npm-run-all --parallel build:watch demo",
    "predemo": "npm run build",
    "demo": "http-server -o -s -c 1 -a localhost",
    "cypress:open": "cypress open",
    "lint": "standard --verbose | snazzy",
    "pretest": "npm run lint",
    "test": "npm run test:integration",
    "test:integration": "npm run demo & cypress run"
  },
  "keywords": [
    "mtg",
    "magic the gathering"
  ],
  "author": "blade <blade@crookedneighbor.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autosize": "^4.0.2",
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^16.2.2",
    "browserify-hmr": "^0.3.6",
    "chai": "^4.1.2",
    "chalk-cli": "^4.0.0",
    "cross-env": "^1.0.6",
    "cypress": "^3.1.0",
    "envify": "^3.4.1",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "npm-run-all": "^2.1.2",
    "scryfall-client": "^0.7.0",
    "sinon": "^5.1.1",
    "sinon-chai": "^3.1.0",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "uglifyify": "^4.0.5",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vueify": "^9.4.1",
    "vuex": "^3.0.1",
    "watchify": "^3.11.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "standard": {
    "globals": [
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "context",
      "expect",
      "it",
      "cy",
      "Cypress"
    ],
    "ignore": [
      "dist/build.js"
    ]
  }
}
