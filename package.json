{
  "name": "deck-builder",
  "version": "0.8.1",
  "description": "A Magic the Gathering Deck builder.",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "build:precommit": "/bin/bash scripts/build-precommit.sh",
    "build:prepush": "npm test",
    "prebuild": "node scripts/build-docs.js",
    "build:watch": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "dev": "npm-run-all --parallel build:watch demo",
    "predemo": "npm run build",
    "demo": "http-server -p 8080 -o --silent -c 1 -a localhost",
    "cypress:open": "cypress open",
    "lint": "eslint --ext .js,.vue src cypress",
    "pretest": "npm run lint",
    "test": "npm run test:integration",
    "test:integration": "cypress run"
  },
  "keywords": [
    "mtg",
    "magic the gathering"
  ],
  "author": "blade <blade@crookedneighbor.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autosize": "^4.0.2",
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^16.5.0",
    "browserify-hmr": "^0.4.1",
    "chai": "^4.2.0",
    "chalk-cli": "^4.1.0",
    "cross-env": "^1.0.6",
    "cypress": "^3.8.3",
    "envify": "^3.4.1",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "http-server": "^0.12.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "mousetrap": "^1.6.5",
    "npm-run-all": "^2.1.2",
    "scryfall-client": "^0.11.0",
    "sinon": "^5.1.1",
    "sinon-chai": "^3.4.0",
    "uglifyify": "^4.0.5",
    "uuid": "^3.4.0",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5",
    "vueify": "^9.4.1",
    "vuex": "^3.1.2",
    "watchify": "^3.11.1"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  }
}
